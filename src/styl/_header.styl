// Header home
.header-site
    background-color main
    background-image noise
    min-height 100vh
    content 'viewport-units-buggyfill; min-height:100vh;'

    .content
        width: 95%
        align(both)
    h1,h2
        color: sec
        text-align center
    .site-title
        font-size rem(50px)
        line-height 1
        margin-top -80px
        display block
        +above(cut)
            margin-bottom 0
            font-size rem(80px)
    .site-description
        font-size rem(18px)
        display block
        margin rem(30px) 0
        +above(cut)
            font-size rem(30px)

// Header Post
.header-post
    background main
    min-height: 100vh
    content 'viewport-units-buggyfill; min-height:100vh;'
    .content
        width 90%
        align(both)
        +above(cut)
            center(1000px)
    .subheader
        display table
        padding 20px
        a
            border 2px solid sec
            border-radius 20px
            padding 0 10px
            +above(cut)
                padding 0 10px

    .date
        mainFont(300)
        font-size rem(16px)
    h1
        text-transform uppercase
        font-size rem(30px)
        margin 0 0 30px
        +above(cut)
            font-size rem(60px)
    .subtitle
        mainFont(300)
        font-size rem(20px)
    h1,.subtitle, .date
        color sec
        text-align center
    svg
        transition .8s
    a,p
        color sec
        text-decoration none
        mainFont(300)
        font-size rem(18px)
    a
        float left
        p,svg
            float left
        p
            margin rem(5px)
            +above(cut)
                margin rem(10px)
        &:hover
            .icon-back
                transform translateX(-10px)