*, *:before, *:after
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box

body
  left 0
  right 0
  margin auto

a, #sidebar, #fade, body
    transition all .25s ease
a#slide, #search
    position absolute
    display block
    width 46px
    height 46px
    top 10px
    z-index 31
#slide
    left 10px
#search
    right 10px
    background darken(main,10%)
    border-radius rem(3px)
    padding rem(2px) rem(3px)
.icon-menu
    cursor pointer
    padding rem(5px)
    border-radius rem(3px)
    background darken(main,10%)
    width rem(46px)
    height rem(46px)
    fill sec
.icon-search
    width rem(46px)
    height rem(46px)

#fade
    cursor pointer

#close
    display none

#sidebar
    position fixed
    height 100%
    width rem(240px)
    padding rem(40px) 0 0
    top 0
    left rem(-240px)
    background #3F3F3F
    z-index 20
    box-shadow inset -10px -1px 15px -9px rgba(0,0,0,0.5)
    h2
        text-align center
        margin 0 0 rem(10px)
        mainFont(800)
        font-size rem(20px)
        color sec
    #navigation
        ul
            padding 0
        li
            margin 0
            list-style-type none
            a
                width 100%
                display block
                padding rem(20px)
                text-decoration none
                mainFont(300)
                color #b3b3b1
                border-top 1px solid darken(lightGray,50%)
                &:hover
                    color #191918
                    background sec
        .feed
            border-bottom 1px solid darken(lightGray,50%)
    &.slide
        left 0


a#slide.slide
    left rem(250px)
    pointer-events none

#fade
    position fixed
    width 100%
    height 100%
    top 0
    left 0
    pointer-events none
    background transparent
    z-index 30
    &.slide
        pointer-events auto
        left 240px
        background rgba(0,0,0,.6)